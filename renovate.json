{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "description": "Renovate-Configuration for tiny4linux",
  "labels": ["üë∑ renovate"],
  "prHourlyLimit": 20,
  "recreateWhen": "always",
  "commitMessagePrefix": "‚¨ÜÔ∏è ",
  "commitMessageAction": "Upgrade",
  "commitMessageTopic": "Dependency {{depName}}",
  "commitMessageExtra": "to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "Lockfile-Maintenance",
    "prBodyDefinitions": {
      "Change": "Updated Lock-File"
    }
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["pin"],
      "commitMessagePrefix": "üìå ",
      "commitMessageAction": "Pin",
      "addLabels": ["pin"]
    },
    {
      "matchUpdateTypes": ["rollback"],
      "commitMessagePrefix": "‚¨áÔ∏è ",
      "commitMessageAction": "Downgrade"
    },
    {
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["tiny4linux-assets"],
      "schedule": ["every 2 days"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Cargo\\.toml$"],
      "matchStrings": [
        "(?<depName>[^\\s=]+)\\s*=\\s*\\{[^}]*git\\s*=\\s*\"(?<packageName>https:\\/\\/github\\.\\/[^\"}]+)\"[^}]*rev\\s*=\\s*\"(?<currentValue>[0-9a-f]{7,40})\"[^}]*\\}"
      ],
      "datasourceTemplate": "git-refs",
      "versioningTemplate": "git"
    }
  ]
}
